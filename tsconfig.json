{
   "compilerOptions": {
      "module": "es2022",
      "preserveConstEnums": true,
      "sourceMap": false,
      "target": "ES2022",
      "lib": ["DOM", "ES2021", "ES2023.Array"],
      "outDir": "dist",
      "types": [
         "node"
      ],
      "declaration": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true
   },
   "include": [
      "src/**/*.ts"
   ]
}
